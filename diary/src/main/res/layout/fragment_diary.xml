<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="adapter"
            type="com.nocapstone.diary.DiaryAdapter" />

        <variable
            name="viewModel"
            type="com.nocapstone.diary.DiaryViewModel" />
    </data>


    <FrameLayout
        android:background="@color/butter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.nocapstone.diary.DiaryFragment">

        <androidx.recyclerview.widget.RecyclerView
            adapter="@{adapter}"
            submitList="@{viewModel.diaryList}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            tools:listitem="@layout/item_diary" />

    </FrameLayout>

</layout>
